{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@utils": ["src/app/utils/index"],
      "@services": ["src/app/services/index"],
      "@models": ["src/app/models/index"],
      "@context": ["src/app/context/index"],
      "@controllers": ["src/app/controllers/index"]
    },
    "lib": ["es2015", "es6", "esnext.asynciterable", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "awesomeTypescriptLoaderOptions": {
    "forceIsolatedModules": true,
    "useBabel": true,
    // "babelOptions": {
    //     "babelrc": false,
    //     /* Important line */
    //     "presets": [
    //         ["@babel/preset-env", {
    //             "targets": "last 2 versions, ie 11",
    //             "modules": false
    //         }]
    //     ]
    // },
    "babelCore": "@babel/core",
    "useCache": true,
    "reportFiles": ["src/**/*.{ts,tsx}"]
  }
}
